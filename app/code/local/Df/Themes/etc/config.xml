			<general>
				<!-- Best Seller -->
				<title>Популярные товары</title>
			</general>
		</productlist_cfg>
		<producttabs_cfg>
			<general>
				<!-- New Products -->
				<title>Новинки</title>
			</general>
		</producttabs_cfg>
		<!--
			Оформительская тема Argento
			@link http://argentotheme.com/
		-->
		<tm_ajaxsearch>
			<general>
				<searchfieldtext>что будем искать?</searchfieldtext>
				<headertext>все товары по запросу</headertext>
				<footertext>все товары по запросу</footertext>
			</general>
		</tm_ajaxsearch>
		<!--
			Оформительские темы Infortis Ultimo и Infortis Fortis
			@link http://themeforest.net/item/ultimo-fluid-responsive-magento-theme/3231798?WT.ac=category_item&WT.seg_1=category_item&WT.z_author=infortis
			Обратите внимание, что для перевода демо-данных
			(когда англоязычные значения уже попали в БД и система не использует сначения по умолчанию ниже),
			перевод осуществляется по словарю:
			app/code/local/Df/Localization/etc/rm/dictionaries/onetime/Infortis/Fortis.xml
		-->
