	</frontend>
	<default>
		<ajaxfilter_cfg>
			<price_slider>
				<goBtnText>применить</goBtnText>
			</price_slider>
		</ajaxfilter_cfg>
		<!-- Оформительские темы TemplateMela:
			Classy Shop (MAG090171)
			Minimal Multi Purpose (MAG090180)
		-->
		<bestseller>
			<sidebar>
				<heading>Популярное</heading>
			</sidebar>
			<standalone>
				<heading>Популярное</heading>
			</standalone>
			<listing_home>
				<heading>Популярное</heading>
			</listing_home>
		</bestseller>
